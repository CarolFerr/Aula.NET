@model IEnumerable<Imobiliaria.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>

<!-- Inicio criando campo de busca -->
<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Cliente" asp-action="Index">
    <p>
        Nome: <input type="text" name="searchString" />
        <input type="submit" value="Buscar" />
    </p>


</form>
<!-- Fim criando campo de busca -->

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) { // model = lista de clientes
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a class="button-link" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                <a class="button-link" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <a class="button-link" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
